<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFDAEF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="256dp"
        android:src="@drawable/upt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#093B51"
        android:padding="20dp"
        android:textAlignment="center"
        android:text="UPT Konservasi Penyu"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Lokasi: Apar, Kec. Pariaman Utara, Kota Pariaman, Sumatera Barat"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="338dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Berada di kawasan pantai Ampalu, desa Mangggung, Pariaman, tempat ini menjadi lokasi mendaratnya penyu laut setiap tahun. Mama bisa mengenalkan kepada si Kecil mengenai hewan yang hampir punah ini dan memberitahukan pentingnya pelestarian yang dilakukan agar penyu tidak punah. Di tempat penangkaran penyu ini terdapat ruang inkubasi peneluran penyu, hactery, dan ruang karantina yang dapat dilihat. Selain itu, karena berada di pesisir pantai tempat ini terdapat taman bermain yang luas yang berhadapan langsung dengan pantai. Sementara di bagian belakang konservasi terdapat hutan manggrove, tempat pelestari tumbuhan bakau."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp" />

    </ScrollView>

</LinearLayout>